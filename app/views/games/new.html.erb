<div class="container">
  <h1>New Game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
        <%= letter %>
    <% end %>
</div>

<div class="user-input">
  <form action="/score" method="post">
  <h3>What's the longest word you can find?</h3>
  <input type="text" class="form-input" name="word">
  <input type="submit" value="Play" class="btn">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
   </form>
  </div>
